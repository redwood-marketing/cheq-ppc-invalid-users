{%- set defaultArgs = {
	'heading': 'Be ready to automate anything.',
	'content': 'Build and automate workflows in half the time without the need for scripting. Gain operational peace of mind with real-time insights, customizable alerting, and more.',
	'includeImg': true,
    'backgroundTheme': "primary",
    'buttonTheme': "light",
    'backgroundStrips': ["transparent", "transparent"],
    'link': {
        'text': 'Get a Demo',
        'url': 'https://www.advsyscon.com/en-us/demo/quick'
    }
} -%}
{%- set args = defaultArgs|mergeAttributes( bannerArgs ) -%}
<aside 
    class="[ px-2 ][ text-center text-md-start ][ d-flex align-items-center flex-column gap-6 ][ position-relative ]" 
    style="background: linear-gradient(to bottom, {{ args.backgroundStrips[0] }} 50%, {{ args.backgroundStrips[1] }} 50%, {{ args.backgroundStrips[1] }})"
>
    <div class="[ container-fluid container-xl ][ d-flex flex-column flex-md-row align-items-center justify-content-between gap-2 ][ bg-{{ args.backgroundTheme }} text-white ][ overflow-hidden ][ rounded-4 ][ p-4 p-lg-6 px-lg-8 ][ position-relative z-6 ]">
        <div class="[ d-grid gap-2 ]" style="max-width: 65ch">
            <h2>{{ args.heading | safe }}</h2>
            {% if args.content %}
                <p class="[ m-0 ]">{{ args.content | safe  }}</p>
            {% endif %}
        </div>
        <a 
            href="{{ args.link.url }}" 
            class="[ btn btn-{{ args.buttonTheme }} ][ position-relative z-1 ]" 
            target="{{ args.link.target or "_self" }}"
        >
            {{ args.link.text }}
