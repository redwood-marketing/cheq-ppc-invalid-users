<div id="integrations" class="[ grid gap-0 ][ bg-white ][ border border-black rounded-4 ][ overflow-hidden ][ w-100 ]" style="--bs-columns: 3">
    <ul class="[ g-col-3 g-col-md-1 order-1 order-md-0 ][ d-grid ][ list-unstyled ][ m-0 ]">
        {% for item in integrations %}
            <li class="[ text-center ][ border-black border-end {{ "border-top" if loop.index != 1 }} ][ d-grid gap-2 ]">
                <button 
                    data-target="#tab-{{loop.index}}" 
                    class="[ btn rounded-0 ][ {{ "bg-white" if loop.index === 1 }} ]" 
                    style="background-color: var(--bs-gray-200)"
                >{{ item.category }}</button>
            </li>
        {% endfor %}
    </ul>
    <ul class="[ g-col-3 g-col-md-2  ][ list-unstyled ][ tab-content ][ m-0 ]">
        {% for item in integrations %}
        <li id="tab-{{loop.index}}" class="[ col ][ p-1 p-lg-2 ][ tab-pane ][ fade {{ "show active" if loop.index === 1 }} ]">
            <ul class="[ list-unstyled ][ grid gap-1 gap-lg-2 ]"  style="grid-template-rows: repeat(2, 1fr); --bs-columns: 4">
                {% for app in item.apps %}
                    <li class="[ g-col-2 g-col-md-2 g-col-lg-1 ][ position-relative ][ text-start ]">
                        <article class="[ d-flex flex-column gap-1 ][ h-100 ][ @hover:bg-quaternary bg-white ][ rounded-3 ][ border border-dark ][ p-2 ]">
                            <img 
                                class=""
                                style="max-width: 50%; max-height: 1.6em; object-position: left"
                                src="{{ app.img }}" 
                                alt="" 
                                width="150" 
                                height="100"
                            >
                            <h3 class="[ h6 ]" style="min-height: 5em">
                                {{ app.name }} 
                            </h3>
                            {% if app.link %}
                            <a class="[ small text-decoration-none text-reset stretched-link ][ d-flex align-items-center gap-{3} ]" href="{{ app.link }}">
                                Learn more <span class="[ sr-only ]">about our {{ app.name }} integration</span>
                                <svg width="10" height="8" viewBox="0 0 12 10" fill="none" xmlns="http://www.w3.org/2000/svg">
                                    <path d="M-2.19579e-07 5.02338C-2.30448e-07 5.27203 0.102517 5.51048 0.284998 5.6863C0.467478 5.86211 0.714975 5.96088 0.973042 5.96088L8.67954 5.96088L6.12368 8.42339C5.9518 8.6011 5.85823 8.83616 5.86268 9.07904C5.86713 9.32191 5.96925 9.55365 6.14752 9.72541C6.3258 9.89718 6.56632 9.99557 6.8184 9.99985C7.07049 10.0041 7.31446 9.91399 7.49891 9.74838L11.7154 5.68589C11.8976 5.5101 12 5.27182 12 5.02339C12 4.77495 11.8976 4.53667 11.7154 4.36089L7.49891 0.298385C7.40983 0.206277 7.30241 0.132399 7.18305 0.081159C7.06369 0.029919 6.93484 0.00236666 6.80419 0.000145675C6.67354 -0.00207531 6.54376 0.0210803 6.4226 0.0682316C6.30144 0.115383 6.19138 0.185564 6.09898 0.274587C6.00658 0.36361 5.93374 0.469653 5.8848 0.586388C5.83586 0.703123 5.81183 0.82816 5.81413 0.954038C5.81644 1.07992 5.84504 1.20406 5.89822 1.31906C5.9514 1.43406 6.02808 1.53756 6.12368 1.62338L8.67954 4.08588L0.973042 4.08588C0.435922 4.08588 -1.96958e-07 4.50588 -2.19579e-07 5.02338Z" fill="#082029"/>
