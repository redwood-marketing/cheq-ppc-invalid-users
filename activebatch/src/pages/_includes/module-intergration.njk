<script async defer>
    document.querySelector("#integrations").addEventListener("click", function(event) {
        if ( typeof event.target.dataset.target !== "undefined" ) {
            this.querySelector(".tab-pane.active.show").classList.remove("active", "show");
            this.querySelector(event.target.dataset.target).classList.add("active", "show");

            this.querySelector("[data-target].bg-white").classList.remove("bg-white", "border-lg-end");
            event.target.classList.add("bg-white");
        }
    })
</script>